<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="ca"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="genweb.organs">

<body>

  <div id="content-core" metal:fill-slot="main">

    <h2 i18n:translate="">Sessions i acords dels òrgans col·legiats</h2>

    <div class="row mb-5 list-agenda"
        tal:define="organ_govern view/getLatestCDG;
                    consell_social view/getLatestCS;
                    claustre view/getLatestCU">

      <div class="col-md-4" tal:condition="organ_govern">
        <a tal:attributes="href organ_govern/url" class="card card-organ text-bg-light text-decoration-none">
          <img src="++theme++genweb.organs/img/foto_consell_govern.jpg" class="card-img-top" alt="Consell de Govern" />
          <div class="card-body d-flex justify-content-between align-items-center">
            <div class="card-txt">
              <h3 class="card-title h5">Consell de Govern</h3>
              <p class="card-text" tal:content="organ_govern/title">Last session</p>
            </div>
            <div class="card-ic">
              <i class="bi bi-arrow-right-circle text-primary" aria-hidden="true"></i>
            </div>
          </div>
        </a>
      </div>

      <div class="col-md-4" tal:condition="consell_social">
        <a tal:attributes="href consell_social/url" class="card card-organ text-bg-light text-decoration-none">
          <img src="++theme++genweb.organs/img/foto_consell_social.jpg" class="card-img-top" alt="Consell Social" />
          <div class="card-body d-flex justify-content-between align-items-center">
            <div class="card-txt">
              <h3 class="card-title h5">Consell Social</h3>
              <p class="card-text" tal:content="consell_social/title">Last session</p>
            </div>
            <div class="card-ic">
              <i class="bi bi-arrow-right-circle text-primary" aria-hidden="true"></i>
            </div>
          </div>
        </a>
      </div>

      <div class="col-md-4" tal:condition="claustre">
        <a tal:attributes="href claustre/url" class="card card-organ text-bg-light text-decoration-none">
          <img src="++theme++genweb.organs/img/foto_claustre.jpg" class="card-img-top" alt="Claustre Universitari" />
          <div class="card-body d-flex justify-content-between align-items-center">
            <div class="card-txt">
              <h3 class="card-title h5">Claustre Universitari</h3>
              <p class="card-text" tal:content="claustre/title">Last session</p>
            </div>
            <div class="card-ic">
              <i class="bi bi-arrow-right-circle text-primary" aria-hidden="true"></i>
            </div>
          </div>
        </a>
      </div>
    </div>

    <tal:block tal:define="organs view/getOwnOrgans;" tal:condition="organs">
      <h2 i18n:translate="">La meva vinculació amb els òrgans de govern</h2>
      <div class="border rounded-3 text-bg-light p-3 meva-vinculacio">
        <tal:organs tal:repeat="organ organs">
          <div class="d-flex align-items-center">
            <span tal:attributes="style string:background-color:${organ/color};">&nbsp;</span>
            <i class="bi bi-journal ms-2"></i>
            <a tal:attributes="href organ/url;" class="mx-2">
              <tal:event content="organ/title">Organ Title</tal:event>
            </a>
            <div class="ms-auto badges" tal:condition="organ/role">
              <tal:roles tal:repeat="role organ/role">
                <span class="badge bg-primary me-1">
                  <tal:omit-tag tal:content="role" i18n:translate="">Secretari</tal:omit-tag>
                </span>
              </tal:roles>
            </div>
          </div>
        </tal:organs>
      </div>
    </tal:block>

    <!-- Caja principal de Eines -->
    <h2 i18n:translate=""> Eines </h2>

    <section class="mb-4">
      <form method="GET" action="" role="search">
        <div class="row mb-3 g-2 align-items-end">
          <div class="col-10">
            <input type="text" class="form-control" id="searchText" name="SearchableText" placeholder="Cercar..."
              tal:attributes="value request/SearchableText|nothing" />
          </div>
          <div class="col-2">
            <button type="submit" class="btn btn btn-primary w-100"><i class="bi bi-search me-2"></i>Cerca</button>
          </div>
        </div>
        <div class="row mb-3 g-2">
          <div class="col-md-4">
            <label class="form-label">Tipus de document</label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="genweb.organs.acord" id="acordCheck"
                name="portal_type:list" checked="checked" />
              <label class="form-check-label" for="acordCheck">Acord</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="genweb.organs.punt" id="puntCheck"
                name="portal_type:list" checked="checked" />
              <label class="form-check-label" for="puntCheck">Punt informatiu</label>
            </div>
          </div>
          <div class="col-md-4">
            <label class="form-label">Òrgan col·legiat</label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="govern" id="governCheck" name="organ:list"
                checked="checked" />
              <label class="form-check-label" for="governCheck">Consell de Govern</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="social" id="socialCheck" name="organ:list"
                checked="checked" />
              <label class="form-check-label" for="socialCheck">Consell Social</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="claustre" id="claustreCheck" name="organ:list"
                checked="checked" />
              <label class="form-check-label" for="claustreCheck">Claustre Universitari</label>
            </div>
          </div>
          <div class="col-md-4">
            <label class="form-label">Període</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="any" id="periodeAny" name="period"
                checked="checked" />
              <label class="form-check-label" for="periodeAny">Qualsevol data</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="darrer" id="periodeDarrer" name="period" />
              <label class="form-check-label" for="periodeDarrer">Darrer any</label>
            </div>
          </div>
        </div>
        <!-- Resultados de búsqueda -->
        <div class="row">
          <div class="col-12">
            <div class="card mt-3">
              <div class="card-body">
                <h5 class="card-title">Resultats de la cerca</h5>
                <tal:block tal:define="results view/results">
                  <tal:block tal:condition="results">
                    <div class="list-group">
                      <tal:documents repeat="item results">
                        <a tal:attributes="href item/getURL"
                          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                          <span>
                            <span class="fw-bold" tal:content="item/Title">Títol</span>
                            <span class="text-muted small ms-2" tal:content="item/portal_type">Tipus</span>
                          </span>
                          <span class="badge bg-secondary" tal:content="item/created|nothing"></span>
                        </a>
                      </tal:documents>
                    </div>
                  </tal:block>
                  <tal:block tal:condition="not:results">
                    <p class="text-muted">No s'han trobat resultats.</p>
                  </tal:block>
                </tal:block>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>

    <tal:banners>
      <div class="row">
        <ol class="list-banners row list-unstyled">
          <li class="col-md-6 mb-3">
            <a href="https://governhistoric.upc.edu/ca/benvingut" target="_blank"
              class="card h-100 text-decoration-none">
              <div class="card-body">
                <h2 class="card-title h5">Hemeroteca i documentació d'òrgans d'anys anteriors</h2>
              </div>
              <i class="icon bi bi-external-link position-absolute end-0 bottom-0 m-3" aria-hidden="true"></i>
            </a>
          </li>
          <li class="col-md-6 mb-3">
            <a href="https://www.upc.edu/slt/ca/recursos-redaccio/models-documents/governupc" target="_blank"
              class="card h-100 text-decoration-none">
              <div class="card-body">
                <h2 class="card-title h5">Pautes per a l'elaboració de documents</h2>
              </div>
              <i class="icon bi bi-external-link position-absolute end-0 bottom-0 m-3" aria-hidden="true"></i>
            </a>
          </li>
        </ol>
      </div>
    </tal:banners>

  </div>

</body>

</html>