<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ca"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<div metal:fill-slot="main">
  <div class="container my-4">

    <!-- Título principal -->
    <h1 class="documentFirstHeading d-flex align-items-center mb-4">
      <span class="me-2 text-primary fw-bold" style="font-size:2rem;" tal:content="context/proposalPoint">1</span>
      <span class="fw-bold" tal:content="view/title">Títol del punt</span>
      <span class="ms-3 badge rounded-pill px-3 py-2 align-middle" tal:define="color view/getColor" tal:attributes="style string:background-color:${color};" tal:content="context/estatsLlista"></span>
    </h1>

    <!-- Descripció -->
    <div tal:condition="view/message" class="mb-4">
      <div class="alert alert-light border" tal:content="structure view/message">Descripció</div>
    </div>

    <!-- Fitxers i documents relacionats -->
    <div class="table-responsive mb-5" tal:condition="view/FilesandDocumentsInside">
      <table class="table table-striped table-bordered filesanddocs">
        <thead>
          <tr>
            <th i18n:translate="">Fitxers i documents</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <ul class="list-unstyled m-0">
                <tal:documents repeat="item view/FilesandDocumentsInside">
                  <li class="mb-1">
                    <a tal:define="title item/title"
                       tal:attributes="href item/absolute_url; target python:item.get('new_tab') and '_blank' or None; title title; alt title"
                       class="text-decoration-none d-flex align-items-center">
                      <i tal:attributes="class item/classCSS" class="bi bi-file-earmark-text me-2"></i>
                      <span tal:content="title">Nom fitxer</span>
                    </a>
                  </li>
                </tal:documents>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Subpunts / Acords -->
    <div class="table-responsive" tal:condition="view/SubPuntsInside">
      <table class="table table-striped table-bordered subpunts">
        <thead>
          <tr>
            <th i18n:translate="">Subpunts informatius / acords</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <ul class="list-unstyled m-0">
                <tal:subpunts repeat="item view/SubPuntsInside">
                  <li class="mb-1">
                    <div class="d-flex align-items-center">
                      <span class="me-2 text-primary fw-bold" tal:content="item/proposalPoint">1.1</span>
                      <a class="flex-grow-1 text-decoration-none" tal:attributes="href item/absolute_url;">
                        <span tal:content="item/title">Títol subpunt</span>
                        <span tal:condition="item/agreement" class="ms-2 text-muted small">[<tal:omit-tag i18n:translate="">acord</tal:omit-tag> <span tal:content="item/agreement"></span>]</span>
                      </a>
                      <span class="badge rounded-pill ms-2" tal:attributes="style string:background-color:${item/css};" tal:content="item/state"></span>
                    </div>
                  </li>
                </tal:subpunts>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

</body>
</html>
