<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="ca" lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<div metal:fill-slot="main" tal:condition="view/canView"
     tal:define="defaultContent context/defaultContent;
                 filesanddocs view/FilesandDocumentsInside;
                 votacions view/VotacionsInside;">

  <div class="container my-4">

    <!-- Título principal -->
    <h1 class="documentFirstHeading d-flex align-items-center mb-4">
      <span class="me-2 text-primary fw-bold" style="font-size:2rem;" tal:content="context/proposalPoint">1</span>
      <span class="fw-bold" tal:content="context/Title">Títol de l'acord</span>
      <span class="ms-2" tal:content="view/AcordTitle">[Acord X]</span>
      <span class="ms-3 badge rounded-pill px-3 py-2 align-middle"
            tal:define="color view/getColor"
            tal:attributes="style string:background-color:${color};"
            tal:content="context/estatsLlista">Esborrany</span>
    </h1>

    <!-- Firma (si aplica) -->
    <tal:block tal:condition="view/hasFirma">
      <span tal:define="estatFirma view/estatFirma"
            tal:attributes="class string:badge rounded-pill estatFirma ${estatFirma}"
            tal:content="estatFirma">PENDENT_SIGNANTS</span>
    </tal:block>

    <!-- Descripció -->
    <div tal:condition="defaultContent" class="mb-4">
      <div class="alert alert-light border" tal:content="structure defaultContent/output">Descripció</div>
    </div>

    <!-- Fitxers i documents relacionats -->
    <div class="table-responsive mb-5" tal:condition="filesanddocs">
      <table class="table table-striped table-bordered filesanddocs">
        <thead>
          <tr>
            <th i18n:translate="">Fitxers i documents</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <ul class="list-unstyled m-0">
                <tal:documents repeat="item filesanddocs">
                  <li class="mb-1">
                    <a tal:define="title item/title"
                       tal:attributes="href item/absolute_url;
                                       target python:item.get('new_tab') and '_blank' or None;
                                       title title; alt title"
                       class="text-decoration-none d-flex align-items-center">
                      <i tal:attributes="class item/classCSS" class="bi bi-file-earmark-text me-2"></i>
                      <span tal:content="title">Nom fitxer</span>
                    </a>
                  </li>
                </tal:documents>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Esmenes / Votacions -->
    <div class="table-responsive" tal:condition="votacions">
      <table class="table table-striped table-bordered votacions">
        <thead>
          <tr>
            <th i18n:translate="">Esmenes / Votacions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <ul class="list-unstyled m-0">
                <tal:documents repeat="item votacions">
                  <li class="mb-1">
                    <a tal:attributes="href item/absolute_url; title item/title; alt item/title"
                       class="text-decoration-none">
                      <span tal:content="item/title">Votació</span>
                    </a>
                  </li>
                </tal:documents>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

</body>
</html>