<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<div metal:fill-slot="main" tal:condition="view/canView"
      tal:define="absolute_url context/absolute_url;">

  <div class="content-core"
        tal:define="visible_content_type context/file/contentType|nothing;
                    public_file_download_url string:${absolute_url}/@@download/file/${context/file/filename};
                    public_file_view_url string:${absolute_url}/@@display-file/file/${context/file/filename};">

    <h1 class="documentFirstHeading mb-3" tal:content="view/title">Annex</h1>
    
    <div tal:condition="context/description" class="mb-3">
      <div tal:content="structure context/description">Descripci√≥</div>
    </div>

    <p class="mb-3">
      <i class="bi bi-file-earmark-pdf text-info me-1" aria-hidden="true"></i>
      <a tal:attributes="href public_file_view_url;" target="_blank">
        <tal:name tal:content="context/file/filename">Filename</tal:name>
      </a>
      <span class="text-muted fs-s ms-2"
            tal:define="size context/file/getSize; 
                        kb python:round(size/1024, 2)">
        (<span tal:replace="kb"></span> KB)
      </span>
      <a tal:attributes="href public_file_download_url"
         class="ms-2" title="Descarrega fitxer" alt="Descarrega fitxer">
        <i class="bi bi-download"></i>
      </a>
    </p>

    <object type="application/pdf" class="w-100" height="480"
            tal:define="filename context/file/filename"
            tal:attributes="data string:${absolute_url}/@@display-file/file/${filename}">
    </object>
  </div>

</div>
</body>
</html>