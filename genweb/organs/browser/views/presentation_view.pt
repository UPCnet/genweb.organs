<link rel="stylesheet" href="//fontawesome.io/assets/font-awesome/css/font-awesome.css">

<metal:content-core tal:define="items view/PuntsInside">

  <div tal:condition="items" class="DADES">
    <h2 tal:content="view/getSessionTitle">Ordre del dia</h2>
    <ul id="sortable" class="ui-sortable">
      <tal:documents repeat="item items">
        <li>
            <div class="puntTitle" tal:define="agreement item/agreement">
              <span class="proposalNumber" tal:content="item/proposalPoint"></span>
              <span class="agreementClass" tal:condition="agreement" tal:content="agreement"></span>
              <a tal:attributes="href string:${item/absolute_url}/view">
                <tal:omit-tag tal:content="item/title">Item Title</tal:omit-tag>
              </a>
                <div class="btn-group" role="group"
                   style="float: right;">
                <tal:block tal:condition="item/state">
                  <button class="label dropdown-toggle" tal:attributes="style string:background-color: ${item/css}"
                      id="estats" type="button" data-toggle="dropdown"
                      aria-haspopup="true" aria-expanded="false">
                    <a tal:content="item/state"></a>
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" style="left:-70px;" role="menu" aria-labelledby="estats">
                    <tal:block repeat="estat item/estats">
                      <li><a tabindex="-1" tal:attributes="href string:modifyPointState?estat=${estat}&id=${item/item_path}"><span tal:content="estat"></span></a></li>
                    </tal:block>
                  </ul>
                </tal:block>
              </div>
              <div class="btn-group" role="group" tal:condition="not:item/agreement"
                   style="float: right;" aria-label="Fer acord">
                <button type="button" class="acord label label-important"
                  data-container="body"
                  data-toggle="popover"
                  data-placement="bottom"
                  data-html="true"
                  data-trigger="manual"
                  data-original-title="Convertir en acord"
                  tal:attributes="data-item item/id; data-type item/portal_type">
                  Fer acord
                </button>
              </div>
              <tal:files tal:define="files python:view.filesinside(item)" tal:condition="files">
                <ul style="list-style: none;">
                  <tal:documents repeat="item files">
                    <li class="filesinTable">
                      <i tal:attributes=" class item/classCSS"></i>
                      <a tal:attributes="href item/absolute_url;">
                         <tal:omit-tag tal:content="item/title"> Doc title</tal:omit-tag>
                      </a>
                    </li>
                  </tal:documents>
                </ul>
              </tal:files>
            </div>
            <div tal:define="subpunts python:view.SubpuntsInside(item)" tal:condition="subpunts">
              <tal:subpunts repeat="item subpunts">
                <ol class="li_subgrups">
                  <td>
                    <div class="subpuntSession" tal:define="agreement item/agreement">
                      <span class="proposalNumberSubpunt" tal:content="item/proposalPoint"></span>
                      <span class="agreementClass" tal:condition="agreement" tal:content="agreement"></span>
                      <a tal:attributes="href string:${item/absolute_url}"
                         class="">
                        <tal:omit-tag tal:content="item/title">Item Title</tal:omit-tag>
                      </a>
                      <div class="btn-group" role="group"
                           style="float: right;" aria-label="Subpunt actions">
                        <tal:block tal:condition="item/state">
                          <button class="label dropdown-toggle" tal:attributes="style string:background-color: ${item/css}"
                              id="menu1" type="button" data-toggle="dropdown">
                            <a tal:content="item/state"></a>
                            <span class="caret"></span></button>
                            <ul class="dropdown-menu" style="left:-70px;" role="menu" aria-labelledby="menu1">
                              <tal:block repeat="estat item/estats">
                                <li><a tabindex="-1" tal:attributes="href string:modifyPointState?estat=${estat}&id=${item/item_path}"><span tal:content="estat"></span></a></li>
                              </tal:block>
                            </ul>
                        </tal:block>
                      </div>
                      <div class="btn-group" role="group" tal:condition="not:item/agreement"
                           style="float: right;" aria-label="Fer acord">
                        <button  type="button" class="acord label label-important"
                          data-container="body"
                          data-toggle="popover"
                          data-placement="bottom"
                          data-html="true"
                          data-trigger="manual"
                          data-original-title="Convertir en acord"
                          tal:attributes="data-item item/id; data-type item/portal_type">
                          Fer acord
                        </button>
                      </div>
                      <tal:files tal:define="files python:view.filesinside(item)" tal:condition="files">
                        <ul style="list-style: none;">
                          <tal:documents repeat="item files">
                            <li class="filesinTable">
                              <i tal:attributes=" class item/classCSS"></i>
                              <a tal:attributes="href item/absolute_url;">
                                 <tal:omit-tag tal:content="item/title"> Doc title</tal:omit-tag>
                              </a>
                            </li>
                          </tal:documents>
                        </ul>
                      </tal:files>
                    </div>
                  </td>
                </ol>
              </tal:subpunts>
            </div>
        </li>
      </tal:documents>
    </ul>
  </div>

  <div style="margin-bottom:20px;"></div>


</metal:content-core>
