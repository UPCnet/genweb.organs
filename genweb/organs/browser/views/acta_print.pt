
<tal:block i18n:domain="genweb.organs">

    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,733,600' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="++genwebupc++stylesheets/genwebupc.css">
    <link rel="stylesheet" media="print" href="++resource++genweb.organs.stylesheets/print.css">

    <div class="clearfix">
      <img tal:condition="view/getActaLogo" style="float:right;" tal:attributes="src view/getActaLogo" style="height:80px;" />
    </div>
    <h1 style="text-align: left"><span tal:content="view/unitatTitle">UNITAT</span> -
    <span tal:content="view/organGovernTitle">CONSELL DE GOVERN</span></h1>
    <h2 style="text-align: left" tal:content="view/sessionTitle">CONSELL DE GOVERN</h2>
    <hr/>

    <div class="container-fluid" style="border-bottom: 1px solid #b2b2b2;">
      <div class="row-fluid">
        <div class="span12" style="margin-bottom: 0px">
          <div class="row-fluid">
            <div class="span7">
              <tal:omit-tag tal:condition="context/Title">
                <th style="display: inline-block;"><strong i18n:translate="">Acta</strong><b>:</b></th>
                <span tal:content="context/Title"></span>
              </tal:omit-tag>
              <br/>
              <tal:omit-tag tal:condition="context/llocConvocatoria">
                <th style="display: inline-block;"><strong i18n:translate="">Session location</strong><b>:</b></th>
                <span tal:content="context/llocConvocatoria"></span>
              </tal:omit-tag>
            </div>
            <div class="span5">
              <tal:omit-tag tal:condition="context/horaInici">
                <th style="display: inline-block;"><strong i18n:translate="">Session start time</strong><b>:</b></th>
                <span tal:content="python:context.horaInici.strftime('%d/%m/%Y %H:%M')"></span>
              <br/>
              </tal:omit-tag>
              <tal:omit-tag tal:condition="context/horaFi">
                <th style="display: inline-block;"><strong i18n:translate="">Session end time</strong><b>:</b></th>
                <span tal:content="python:context.horaFi.strftime('%d/%m/%Y %H:%M')"></span>
              </tal:omit-tag>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid" style="border-bottom: 1px solid #b2b2b2;">
      <div class="row-fluid">
        <div class="span12" style="margin-bottom: 0px">
          <div class="row-fluid">
            <div class="span6">
              <tal:block tal:condition="context/membresConvocats">
                  <h4 i18n:translate=""> Attending members </h4>
                  <div tal:replace="structure context/membresConvocats"></div>
              </tal:block>
            </div>
            <div class="span6">
              <tal:block tal:condition="context/membresConvidats">
                  <h4 i18n:translate=""> Invited members </h4>
                  <span tal:replace="structure context/membresConvidats"></span>
              </tal:block>

              <tal:block tal:condition="context/llistaExcusats">
                  <h4 i18n:translate=""> Excused members </h4>
                  <span tal:replace="structure context/llistaExcusats"></span>
              </tal:block>

              <tal:block tal:condition="context/noAssistents">
                  <h4 i18n:translate=""> Missing members </h4>
                  <span tal:replace="structure context/noAssistents"></span>
              </tal:block>
            </div>
          </div>
        </div>
      </div>
    </div>

    <tal:block tal:condition="context/ordenDelDia">
      <h3 i18n:translate=""> Acta Body </h3>
      <span tal:replace="structure context/ordenDelDia"></span>
    </tal:block>

    <tal:block tal:condition="view/signatura">
      <br/>
      <span tal:replace="structure view/signatura"></span>
    </tal:block>

</tal:block>
