<html xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     tal:omit-tag=""
     i18n:domain="genweb.organs">

  <input type="text" autocomplete="no" readonly
         id="form-widgets-select_users_other"
         tal:attributes="name view/name;
                         class view/klass;
                         style view/style;
                         title view/title;
                         lang view/lang;
                         onclick view/onclick;
                         ondblclick view/ondblclick;
                         onmousedown view/onmousedown;
                         onmouseup view/onmouseup;
                         onmouseover view/onmouseover;
                         onmousemove view/onmousemove;
                         onmouseout view/onmouseout;
                         onkeypress view/onkeypress;
                         onkeydown view/onkeydown;
                         onkeyup view/onkeyup;
                         value view/value;
                         disabled view/disabled;
                         tabindex view/tabindex;
                         onfocus view/onfocus;
                         onblur view/onblur;
                         onchange view/onchange;
                         alt view/alt;
                         accesskey view/accesskey;
                         onselect view/onselect;
                         size view/size;
                         maxlength view/maxlength;
                         placeholder view/placeholder;
                         autocapitalize view/autocapitalize;" />

  <input id="form-widgets-select_users_other-btn-modal" type="button"
         data-toggle="modal" data-target="#form-widgets-select_users_other-modal"
         i18n:attributes="value Cerca"/>

  <input id="form-widgets-select_users_other-btn-clear" type="button"
         i18n:attributes="value Eliminar"/>

  <div id="form-widgets-select_users_other-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" i18n:translate="">Cerca usuari</h4>
        </div>
        <div class="modal-body">
          <input id="form-widgets-select_users_other-input" type="text" autocomplete="no"
                 i18n:attributes="placeholder nom.cognoms"/>

          <input id="form-widgets-select_users_other-btn" type="button"
                 i18n:attributes="value Cerca"/>

          <p id="form-widgets-select_users_other-error" i18n:translate="">
            <b>Error:</b> El format es incorrecte. <b>nom.cognom</b>
          </p>

          <p id="form-widgets-select_users_other-warn" i18n:translate="">
            No hi ha resultats.
          </p>

          <table id="form-widgets-select_users_other-hint">
            <thead>
              <th i18n:translate="">Usuari</th>
              <th i18n:translate="">Nom complet</th>
              <th i18n:translate="">Correu</th>
              <th></th>
            </thead>
            <tbody>
              <tr><td/><td/><td/><td/><td/></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    var hideElementsSelectOther = function(){
      $("#form-widgets-select_users_other-error").removeClass("viewError");
      $("#form-widgets-select_users_other-warn").removeClass("viewWarn");
      $("#form-widgets-select_users_other-hint > tbody").html("<tr><td/><td/><td/><td/><td/></tr>");
    }

    var addUserOther = function(user){
      parent = $(user).parent().parent();
      if($("#form-widgets-select_users_other").val().length > 0){
        $("#form-widgets-select_users_other").val($("#form-widgets-select_users_other").val() + ', ' + $(parent).children('.userid').html());
      }else{
        $("#form-widgets-select_users_other").val($(parent).children('.userid').html());
      }

      $('#form-widgets-select_users_other-modal').modal('toggle');
    }

    $("#form-widgets-select_users_other-btn").on("click", function(){
      hideElementsSelectOther();
      var regexUsername = new RegExp('^[a-zA-ZñÑçÇ]{1,}\\.[a-zA-Z0-9-.ñÑçÇ]{1,}$');
      var user = $("#form-widgets-select_users_other-input").val();
      if(regexUsername.test(user)){
        $.ajax({
          type: 'POST',
          data: { "user" : $("#form-widgets-select_users_other-input").val() },
          url: 'getUsers',
          success: function(data){
            results = $.parseJSON(data);
            if(results != null && results.length > 0){
              $("#form-widgets-select_users_other-hint > tbody").html("");
              $.each( results, function( key, value ){
                $("#form-widgets-select_users_other-hint").show();
                field = "<tr>";
                field += "<td class='userid'>" + value['user'] + "</td>";
                field += "<td class='fullname'>" + value['fullname'] + "</td>";
                field += "<td class='email'>" + value['email'] + "</td>";
                field += "<td class='actions'>";
                field += "<a class='label add' i18n:attributes='alt add' onclick='addUserOther(this)'>";
                field += "<span class='fa fa-plus' aria-hidden='true'></span>";
                field += "</a>";
                field += "</td>";
                field += "</tr>";
                $("#form-widgets-select_users_other-hint").append(field);
              });
            }else{
              $("#form-widgets-select_users_other-warn").addClass("viewWarn");
            }
          }
        });
      }else{
        $("#form-widgets-select_users_other-error").addClass("viewError");
      }
    });

    $("#form-widgets-select_users_other-btn-clear").on("click", function(){
      $("#form-widgets-select_users_other").val("");
    });
  </script>

</html>
