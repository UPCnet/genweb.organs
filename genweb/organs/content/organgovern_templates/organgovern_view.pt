<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">

<body>

  <metal:content-core fill-slot="content-core">
  <br/>
  <span tal:content="view/selectedOrganType"></span>
  <div id="contentOrgan">
      <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
          <li class="active"><a href="#descriptionTab" data-toggle="tab">Descripció</a></li>
          <li><a href="#composicionTab" data-toggle="tab">Composició</a></li>
          <li><a href="#adrecesTab" data-toggle="tab">Adreces</a></li>
          <li><a href="#acordsTab" data-toggle="tab">Acords</a></li>
      </ul>
      <div id="organsTabs" class="tab-content">
          <div class="tab-pane active" id="descriptionTab">
            <div tal:replace="structure context/acronim" />
            <div tal:replace="structure context/tipus" />
            logoOrgan

            <tal:block tal:condition="context/descripcioOrgan">
              <div tal:replace="structure context/descripcioOrgan" />
            </tal:block>
          </div>

          <div class="tab-pane" id="composicionTab">
            <tal:block tal:condition="context/membresOrgan">
              <div tal:replace="structure context/membresOrgan" />
            </tal:block>

            <div tal:replace="structure context/convidatsPermanentsOrgan" />

          </div>

          <div class="tab-pane" id="adrecesTab">
            <tal:block tal:condition="context/adrecaLlista">
              <div tal:content="context/adrecaLlista" />
            </tal:block>

            <div tal:content="context/adrecaAfectatsLlista" />

          </div>

          <div class="tab-pane" id="acordsTab">
          ... ¿?
          </div>

      </div>
  </div>

    <tal:Sessions tal:define="item view/SessionsInside" tal:condition="item">
      <h3 i18n:translate="">Sessions list</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th style="width:34%">&nbsp;
              <tal:title i18n:translate="">Title</tal:title>
            </th>
            <th style="width:16%">&nbsp;
              <tal:head i18n:translate="">Session date</tal:head>
            </th>
            <th style="width:20%">&nbsp;
              <tal:head i18n:translate="">Session location</tal:head>
            </th>
            <th style="width:13%">&nbsp;
              <tal:head i18n:translate="">Session start</tal:head>
            </th>
            <th style="width:17%">&nbsp;
              <tal:head i18n:translate="">State</tal:head>
            </th>
          </tr>
        </thead>
        <tal:documents repeat="item view/SessionsInside">
          <tal:block tal:define="obj item/getObject;">
            <tr>
              <td>&nbsp;
                <a href="#"
                       tal:attributes="href obj/absolute_url;"
                       tal:content="obj/title">
                        Item Title
                </a>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/dataSessio"
                          tal:content="python:obj.dataSessio.strftime('%d/%m/%Y')" >
                  Data de la Sessió
                </tal:data>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/llocConvocatoria"
                          tal:content="obj/llocConvocatoria">
                  Lloc Convocatoria
                </tal:data>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/horaInici"
                          tal:content="python:obj.horaInici.strftime('%H:%M')">
                  Hora inici
                </tal:data>
              </td>
              <td>&nbsp;
                <span tal:content="item/review_state"
                      i18n:translate=""
                      i18n:domain="genweb"
                      tal:attributes="class item/review_state">
                  Status
                </span>
              </td>
            </tr>
          </tal:block>
        </tal:documents>
      </table>
    </tal:Sessions>

  </metal:content-core>

</body>
</html>
