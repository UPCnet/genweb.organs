<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">

<body>

  <metal:content-core fill-slot="content-core">
  <br/>
  <div class="pull-right" tal:condition="context/logoOrgan">
    <img tal:attributes="src string:${context/absolute_url}/@@images/logoOrgan"
         style="max-height: 60px; width: auto;"/>
    <br/><br/>
  </div>
  <div class="clearfix"></div>

  <div id="contentOrgan">
      <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
          <li class="active" tal:condition="context/descripcioOrgan">
            <a href="#descriptionTab" data-toggle="tab" i18n:translate="">Description</a>
          </li>
          <li tal:condition="view/nomembers">
            <a href="#composicionTab" data-toggle="tab" i18n:translate="">Composicio</a>
          </li>
          <li tal:condition="view/getAcords">
            <a href="#acordsTab" data-toggle="tab" i18n:translate="">Acords aprovats</a>
          </li>
      </ul>
      <div id="organsTabs" class="tab-content">
          <div class="tab-pane active" id="descriptionTab">
            <tal:block tal:condition="context/descripcioOrgan">
              <div tal:replace="structure context/descripcioOrgan" />
            </tal:block>
          </div>

          <div class="tab-pane" id="composicionTab">
            <div class="panel with-nav-tabs panel-primary">
              <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li tal:condition="context/membresOrgan" class="active">
                      <a href="#tab1primary" data-toggle="tab" i18n:translate="">Persones assistents</a>
                    </li>
                    <li tal:condition="context/convidatsPermanentsOrgan">
                      <a href="#tab2primary" data-toggle="tab" i18n:translate="">Persones convidades</a>
                    </li>
                </ul>
              </div>
              <div class="panel-body">
                <div class="tab-content">
                  <div class="tab-pane fade in active" id="tab1primary">
                    <span tal:replace="structure context/membresOrgan" />
                  </div>
                  <div class="tab-pane fade" id="tab2primary">
                    <span tal:replace="structure context/convidatsPermanentsOrgan" />
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div tal:condition="view/getAcords" class="tab-pane" id="acordsTab">
            <table class="table table-striped table-bordered table-hover table-responsive">
              <thead>
                <tr>
                  <th>&nbsp;
                    <tal:title i18n:translate="">Title</tal:title>
                  </th>
                  <th>&nbsp;
                    <tal:head i18n:translate="">Proposal point number</tal:head>
                  </th>
                  <th>&nbsp;
                    <tal:head i18n:translate="">Agreement number</tal:head>
                  </th>
                  <th>&nbsp;
                    <tal:head i18n:translate="">Agreement and document labels</tal:head>
                  </th>
                </tr>
              </thead>
              <tal:documents repeat="item view/getAcords">
                <tal:block tal:define="obj item/getObject;">
                  <tr>
                    <td>&nbsp;
                      <a href="#"
                             tal:attributes="href obj/absolute_url;"
                             tal:content="obj/title">
                              Item Title
                      </a>
                    </td>
                    <td>&nbsp;
                      <span tal:content="obj/proposalPoint">
                        Punt
                      </span>
                    </td>
                    <td>&nbsp;
                      <span tal:content="obj/agreement">
                        Numero
                      </span>
                    </td>
                    <td>&nbsp;
                      <span tal:content="obj/estatsLlista">
                        Status
                      </span>
                    </td>
                  </tr>
                </tal:block>
              </tal:documents>
            </table>
          </div>

      </div>
  </div>

    <tal:Sessions tal:define="item view/SessionsInside" tal:condition="item">
      <h3 i18n:translate="">Sessions list</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th style="width:34%">&nbsp;
              <tal:title i18n:translate="">Title</tal:title>
            </th>
            <th style="width:16%">&nbsp;
              <tal:head i18n:translate="">Session date</tal:head>
            </th>
            <th style="width:20%">&nbsp;
              <tal:head i18n:translate="">Session location</tal:head>
            </th>
            <th style="width:13%">&nbsp;
              <tal:head i18n:translate="">Session start</tal:head>
            </th>
            <th style="width:17%">&nbsp;
              <tal:head i18n:translate="">State</tal:head>
            </th>
          </tr>
        </thead>
        <tal:documents repeat="item view/SessionsInside">
          <tal:block tal:define="obj item/getObject;">
            <tr>
              <td>&nbsp;
                <a href="#"
                       tal:attributes="href obj/absolute_url;"
                       tal:content="obj/title">
                        Item Title
                </a>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/dataSessio"
                          tal:content="python:obj.dataSessio.strftime('%d/%m/%Y')" >
                  Data de la Sessi√≥
                </tal:data>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/llocConvocatoria"
                          tal:content="obj/llocConvocatoria">
                  Lloc Convocatoria
                </tal:data>
              </td>
              <td>&nbsp;
                <tal:data tal:condition="obj/horaInici"
                          tal:content="python:obj.horaInici.strftime('%H:%M')">
                  Hora inici
                </tal:data>
              </td>
              <td>&nbsp;
                <span tal:content="item/review_state"
                      i18n:translate=""
                      i18n:domain="genweb"
                      tal:attributes="class item/review_state">
                  Status
                </span>
              </td>
            </tr>
          </tal:block>
        </tal:documents>
      </table>
    </tal:Sessions>

  </metal:content-core>

</body>
</html>
