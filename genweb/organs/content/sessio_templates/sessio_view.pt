<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<metal:content-core fill-slot="content-core">
    <br/>
    <div id="contentSessio">
      <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
        <li class="active"><a href="#ordreTab" data-toggle="tab">Ordre del dia</a></li>
        <li><a href="#dadesTab" data-toggle="tab">Dades</a></li>
        <li><a href="#assistentsTab" data-toggle="tab">Assistents</a></li>
        <li tal:define="loginfo view/LogInformation" tal:condition="loginfo"><a href="#notificationsTab" data-toggle="tab">Historial</a></li>
      </ul>

      <div id="sessionTabs" class="tab-content">
        <div class="tab-pane active" id="ordreTab" tal:define="item view/PuntsInside" tal:condition="item">
          <table class="table table-striped table-bordered table-hover table-responsive">
            <tal:documents repeat="item view/PuntsInside">
              <tal:block tal:define="obj item/getObject;">
                <tr>
                  <td>&nbsp;
                    <a href="#"
                           tal:attributes="href obj/absolute_url;"
                           tal:content="obj/titlePunt">
                            Item Title
                    </a>
                  </td>
                </tr>
              </tal:block>
            </tal:documents>
          </table>
        </div>

        <div class="tab-pane" id="dadesTab">
          <ul>
            <li tal:condition="context/dataSessio">
              <b i18n:translate="">Data:</b>
              <span style="float:right"
                    tal:content="python:context.dataSessio.strftime('%d/%m/%Y')"></span>
            </li>
            <li tal:condition="context/horaInici">
              <b i18n:translate="">Session start time</b>:
              <span style="float:right"
                    tal:content="python:context.horaInici.strftime('%H:%M')"></span>
            </li>
            <li tal:condition="context/horaFi">
              <b i18n:translate="">Session end time</b>:
              <span style="float:right"
                    tal:content="python:context.horaFi.strftime('%H:%M')"></span>
            </li>
            <li tal:condition="context/llocConvocatoria">
              <b i18n:translate="">Lloc:</b>
              <span style="float:right"
                    tal:content="context/llocConvocatoria"></span>
            </li>
            <li tal:condition="context/llocConvocatoria">
              <b i18n:translate="">Organ de govern:</b>
              <span style="float:right"
                    tal:content="view/OrganTitle"></span>
            </li>
          </ul>
        </div>

        <div class="tab-pane" id="assistentsTab">
          Assistents
        </div>

        <div class="tab-pane" id="notificationsTab" tal:define="loginfo view/LogInformation" tal:condition="loginfo">
          <table class="table table-bordered table-condensed table-responsive" >
            <thead>
              <tr>
                <th>
                   <tal:data i18n:translate="">Data i hora</tal:data>
                 </th>
                <th>
                  <tal:data i18n:translate="">Notificador</tal:data>
                </th>
                <th>
                  <tal:data i18n:translate="">Destinataris</tal:data>
                </th>
              </tr>
            </thead>
            <tbody>
              <tal:documents repeat="data loginfo">
                <tr>
                  <td tal:define="value data/dateMail"
                      tal:content="python:value.strftime('%d/%m/%Y %H:%M:%S')">
                  </td>
                  <td tal:content="data/fromMail"></td>
                  <td tal:content="data/toMail"></td>
                </tr>
              </tal:documents>
            </tbody>
          </table>
        </div>

      </div>
    </div>


</metal:content-core>

</body>
</html>
