<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="genweb.organs">
<body>

<metal:content-core fill-slot="content-core">

  <metal:block define-macro="content-core"
      tal:define="viewPrivate view/viewPrivateContent;
                  alternate context/alternateContent;
                  default context/defaultContent;
                  isMembre view/showMembreContent;
                  isManager view/isManager">

    <h3 i18n:translate="" tal:condition="viewPrivate"> Contingut public </h3>
    <div tal:condition="default"
         tal:replace="structure default">
    </div>

    <tal:block tal:condition="viewPrivate">
      <span tal:condition="alternate">
        <h3 i18n:translate=""> Contingut reservat </h3>
        <div tal:replace="structure alternate"></div>
      </span>
    </tal:block>

    <tal:block tal:condition="isMembre">
    <span tal:condition="default">
      <h3 i18n:translate=""> Contingut </h3>
      <div tal:replace="structure default"></div>
    </span>
    </tal:block>

    <tal:block tal:condition="isManager">
      <span tal:condition="default">
        <h3 i18n:translate=""> Contingut public</h3>
          <div tal:replace="structure default"> </div>
        <br/>
      </span>
      <span tal:condition="alternate">
        <h3 i18n:translate=""> Contingut reservat</h3>
        <div tal:replace="structure alternate"></div>
      </span>
    </tal:block>

  </metal:block>

</metal:content-core>

</body>
</html>
