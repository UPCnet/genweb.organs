<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<metal:title fill-slot="content-title">
  <h1 class="documentFirstHeading">
    <tal:omit-tag tal:content="context/proposalPoint"></tal:omit-tag>
    <tal:omit-tag tal:content="context/Title"></tal:omit-tag>
  </h1>
</metal:title>

<metal:content-core fill-slot="content-core"
    tal:define="filesanddocs view/FilesandDocumentsInside;
                agreement context/agreement;
                estatsLlista context/estatsLlista;
                defaultContent context/defaultContent;">

  <div class="caixaPunts">
    <li tal:condition="agreement">
      <tal:omit-tag i18n:translate="">Agreement number: </tal:omit-tag>&nbsp;<span tal:content="agreement"></span>
    </li>
    <li tal:condition="estatsLlista">
      <tal:omit-tag i18n:translate="">Agreement and document label: </tal:omit-tag>&nbsp;<span tal:content="estatsLlista"></span>
    </li>
  </div>

  <div tal:condition="defaultContent" style="padding-bottom:20px;">
    <h2 i18n:translate="">Contingut</h2>
    <span tal:replace="structure defaultContent" />
  </div>

  <table class="table table-bordered table-responsive filesanddocs" tal:condition="filesanddocs">
    <thead>
      <tr>
        <th>
          <tal:data i18n:translate="">Fitxers i documents</tal:data>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <ul class="ul_items">
            <tal:documents repeat="item filesanddocs">
              <li class="listFiles">
                <i tal:attributes="class item/classCSS"></i>
                <a tal:attributes="href item/absolute_url;">
                   <span tal:content="item/title">Doc title</span></a>&nbsp;<span tal:attributes="class string:${item/labelClass}" tal:content="item/content"></span>
              </li>
            </tal:documents>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>

</metal:content-core>

</body>
</html>
