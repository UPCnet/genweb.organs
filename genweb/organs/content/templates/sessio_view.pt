                        <button type="button" class="remove label label-important"
                              data-container="body"
                              data-toggle="popover"
                              data-placement="left"
                              data-html="true"
                              data-trigger="focus"
                              data-original-title="Delete"
                              tal:attributes="data-item item/id; data-type item/portal_type">
                              <i class="fa fa-trash-o" aria-hidden="true"></i>
