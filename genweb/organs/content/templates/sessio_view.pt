                          <ul class="dropdown-menu" role="menu" aria-labelledby="types">
                            <li><a tabindex="-1" tal:attributes="href string:${item/id}/++add++genweb.organs.file"><span i18n:translate="">File</span></a></li>
                            <li><a tabindex="-1" tal:attributes="href string:${item/id}/++add++genweb.organs.document"><span i18n:translate="">Document</span></a></li>
                          </ul>
                      </div>

                      <div class="btn-group" role="group" tal:condition="isEditor"
                           style="float: right;" aria-label="Subpunt actions">
                        <tal:block tal:condition="item/state">
                          <button class="label dropdown-toggle" tal:attributes="style string:background-color: ${item/css}"
                              id="menu1" type="button" data-toggle="dropdown">
                            <a tal:content="item/state"></a>
                            <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                              <tal:block repeat="estat item/estats">
                                <li><a tabindex="-1" tal:attributes="href string:modifyPointState?estat=${estat}&id=${item/absolute_url}"><span tal:content="estat"></span></a></li>
                              </tal:block>
                            </ul>
                        </tal:block>
                      </div>

                      <div class="subpuntTitle">
    	                 <span class="proposalNumberSubpunt" tal:content="item/proposalPoint"></span>
