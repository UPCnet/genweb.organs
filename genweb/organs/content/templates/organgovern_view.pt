<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">

<body>

<metal:content-core fill-slot="content-core"
       tal:define="acords view/getAcords;
                   members view/members;
                   descripcioOrgan context/descripcioOrgan;
                   membresOrgan context/membresOrgan;
                   convidatsPermanentsOrgan context/convidatsPermanentsOrgan;
                   activeClassMembres view/activeClassMembres;
                   activeClassConvidats view/activeClassConvidats;
                   sessions view/SessionsInside">

  <div style="width: 180px;" class="pull-right" tal:condition="context/logoOrgan">
    <img tal:attributes="src string:${context/absolute_url}/@@images/logoOrgan" />
  </div>
  <div class="clearfix"></div>
  <div class="documentDescription description"></div>
  <div class="documentDescription description" tal:content="structure descripcioOrgan"></div>

  <div id="contentOrgan">

    <button tal:condition="members" type="button" class="btn btn-info" data-toggle="collapse" data-target="#information">
      <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;
      <span i18n:translate="">Mostrar dades de organ</span>
    </button>

    <div class="documentDescription description"></div>

    <div id="information" class="collapse" tal:condition="members">
      <ul id="tabs" class="nav nav-tabs active" data-tabs="tabs">
        <li class="active" tal:condition="members">
          <a href="#composicionTab" data-toggle="tab" i18n:translate="">Composicio</a>
        </li>
      </ul>

      <div id="organsTabs" class="tab-content">
        <div class="tab-pane active" id="composicionTab">
          <div class="panel with-nav-tabs panel-primary">
            <div class="panel-heading">
              <ul class="nav nav-tabs">
                <li tal:condition="membresOrgan" tal:attributes="class string:${activeClassMembres}">
                  <a href="#tab1primary" data-toggle="tab" i18n:translate="">Persones assistents</a>
                </li>
                <li tal:condition="convidatsPermanentsOrgan" tal:attributes="class string:${activeClassConvidats}">
                  <a href="#tab2primary" data-toggle="tab" i18n:translate="">Persones convidades</a>
                </li>
              </ul>
            </div>
            <div class="panel-body">
              <div class="tab-content">
                <div tal:attributes="class string:tab-pane fade ${activeClassMembres}" id="tab1primary">
                  <span tal:replace="structure membresOrgan" />
                </div>
                <div tal:attributes="class string:tab-pane fade ${activeClassConvidats}" id="tab2primary">
                  <span tal:replace="structure convidatsPermanentsOrgan" />
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>


  <tal:Sessions tal:condition="sessions">
    <h3 i18n:translate="">Sessions list</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>
            <tal:title i18n:translate="">Title</tal:title>
          </th>
          <th style="text-align: center;">
            <tal:head i18n:translate="">Session date</tal:head>
          </th>
          <th style="text-align: center;">
            <tal:head i18n:translate="">Session location</tal:head>
          </th>
          <th style="text-align: center;">
            <tal:head i18n:translate="">Session start</tal:head>
          </th>
          <th style="text-align: center;">
            <tal:head i18n:translate="">State</tal:head>
          </th>
        </tr>
      </thead>
      <tal:objects repeat="item sessions">
        <tr>
          <td>
            <a tal:attributes="href item/absolute_url;"
               tal:content="item/title">
                    Item Title
            </a>
          </td>
          <td style="text-align: center;">
            <span tal:content="item/dataSessio" >
                    Data de la Sessio
            </span>
          </td>
          <td style="text-align: center;">
            <span tal:content="item/llocConvocatoria">
                    Lloc sessio
            </span>
          </td>
          <td style="text-align: center;">
            <span tal:content="item/horaInici">
                    Hora inici
            </span>
          </td>
          <td style="text-align: center;">
            <span tal:content="item/review_state"
                  tal:attributes="class item/review_state"
                  i18n:translate=""
                  i18n:domain="genweb">
                     Item State
            </span>
          </td>
        </tr>
      </tal:objects>
    </table>
  </tal:Sessions>

<tal:Sessions tal:condition="sessions">
  <div tal:condition="acords" id="acordsTab">
    <h3 i18n:translate="">Agreements list</h3>
    <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
      <thead>
        <tr>
          <th>
            <tal:title i18n:translate="">Title</tal:title>
          </th>
          <th>
            <tal:head i18n:translate="">Agreement number</tal:head>
          </th>
          <th>
            <tal:head i18n:translate="">Agreement and document label</tal:head>
          </th>
        </tr>
      </thead>
      <tal:documents repeat="item acords">
        <tr>
          <td>
            <a href="#"
                   tal:attributes="href item/absolute_url;"
                   tal:content="item/title">
                    Item Title
            </a>
          </td>
          <td>
            <span tal:content="item/agreement" style="float: right;">
                Numero Acord
            </span>
          </td>
          <td>
            <span tal:content="item/estatsLlista" i18n:translate="">
              Status
            </span>
          </td>
        </tr>
      </tal:documents>
    </table>
  </div>
</tal:Sessions>


</metal:content-core>

</body>
</html>
