<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>



<metal:content-core fill-slot="content-core">

  <div tal:condition="view/isAcord">
    <br/>
    <div class="alert alert-info" role="alert">Aquest punt est√† marcat com Acord.</div>
  </div>

 <table class="table table-bordered table-condensed table-responsive" >
    <thead>
      <tr>
        <th>
          <tal:data i18n:translate="">Proposal point number</tal:data>
        </th>
        <th>
          <tal:data i18n:translate="">Agreement number</tal:data>
        </th>
        <th>
           <tal:data i18n:translate="">Agreement and document labels</tal:data>
         </th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td tal:content="context/proposalPoint"></td>
          <td tal:content="context/agreement"></td>
          <td tal:content="context/estatsLlista"></td>
        </tr>
    </tbody>
  </table>

  <div tal:condition="context/defaultContent">
    <h2 i18n:translate="">Contingut</h2>
    <span tal:replace="structure context/defaultContent" />
  </div>

  <tal:Sessions tal:define="item view/FilesInside" tal:condition="item">
  <h3 i18n:translate="">Filelist</h3>
  <br/>
    <table class="table table-striped">
        <tal:documents repeat="item view/FilesInside">
          <tal:block tal:define="obj item/getObject;">

            <tr>
              <td>&nbsp;
                <a href="#"
                       tal:attributes="href obj/absolute_url;"
                       tal:content="obj/title">
                        Item Title
                </a>
              </td>

            </tr>
          </tal:block>
        </tal:documents>
    </table>
  </tal:Sessions>

</metal:content-core>

</body>
</html>
