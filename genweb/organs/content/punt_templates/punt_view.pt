<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.organs">
<body>

<metal:content-core fill-slot="content-core">

  <div tal:condition="view/isAcord">
    <br/>
    <div class="alert alert-alert" role="alert" i18n:translate="">Esteu visualitzant un punt marcat com Acord.</div>
  </div>

 <table class="table table-bordered table-condensed table-responsive" >
    <thead>
      <tr>
        <th>
          <tal:data i18n:translate="">Proposal point number</tal:data>
        </th>
        <th>
          <tal:data i18n:translate="">Agreement number</tal:data>
        </th>
        <th>
           <tal:data i18n:translate="">Agreement and document labels</tal:data>
         </th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td tal:content="context/proposalPoint"></td>
          <td tal:content="context/agreement"></td>
          <td tal:content="context/estatsLlista"></td>
        </tr>
    </tbody>
  </table>

  <div tal:condition="context/defaultContent">
    <h2 i18n:translate="">Contingut</h2>
    <span tal:replace="structure context/defaultContent" />
  </div>

  <table class="table table-bordered table-condensed table-responsive" tal:condition="view/hihaFitxers">
    <tal:files tal:define="itemPublic view/publicFilesInside;
                            itemPrivate view/privateFilesInside">
      <thead>
        <tr>
          <th tal:condition="itemPublic">
            <tal:data i18n:translate="">Fitxers a publicar</tal:data>
          </th>
          <th tal:condition="itemPrivate">
             <tal:data i18n:translate="">Fitxers interns</tal:data>
           </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td tal:condition="itemPublic">
            <ul>
              <tal:documents repeat="itemPublic view/publicFilesInside">
                <li tal:define="objPublic itemPublic/getObject;" style="list-style: none;">
                <i class="icon-file"></i>
                  <a tal:attributes="href objPublic/absolute_url;"
                     tal:content="objPublic/title">
                     Public Item Title
                  </a>
                  </li>
              </tal:documents>
            </ul>
          </td>
          <td tal:condition="itemPrivate">
            <ul>
              <tal:documents repeat="itemPrivate view/privateFilesInside">
                <li tal:define="objPrivate itemPrivate/getObject;" style="list-style: none;">
                <i class="icon-file"></i>
                  <a tal:attributes="href objPrivate/absolute_url;"
                     tal:content="objPrivate/title">
                     Private Item Title
                  </a>
                </li>
              </tal:documents>
            </ul>
          </td>
        </tr>
      </tbody>
    </tal:files>
  </table>


</metal:content-core>

</body>
</html>
